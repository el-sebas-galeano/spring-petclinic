pipeline {
    agent any
    
    tools {
        maven 'Maven 3.8.7'
        jdk 'Java 17'
    }    
    stages {
        stage('Checkout Code') {
            steps {
                git branch: 'main', url: 'https://github.com/el-sebas-galeano/spring-petclinic.git'
            }
        }
        
        stage('Build') {
            steps {
                sh 'mvn clean package -DskipTests'
            }
        }
        
        stage('Test') {
            steps {
                sh 'mvn test'
            }
        }
        
        stage('Run Spring Boot') {
            steps {
                sh 'java -jar target/nombre-del-jar-spring-boot.jar'
            }
        }
    }
    
    post {
        success {
            echo 'Pipeline ejecutada con Ã©xito'
        }
        failure {
            echo 'La pipeline ha fallado'
        }
    }
}
